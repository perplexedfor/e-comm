generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model reviews {
  id          Int      @id @default(autoincrement())
  name        String
  review      String
  rating      Int
  created_at  DateTime @default(now())
  categoryId Int?
  category   category? @relation(fields: [categoryId], references: [id])
}

model category {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  reviews reviews[]
  description Json?
}


model MCB_DB_BOX {
  id         Int      @id @default(autoincrement())
  type      String
  size     Int?
  description Json?
}

model AC_BOX {
  id         Int      @id @default(autoincrement())
  type      String
  size     Int?
}

model GI_MODULAR_BOX {
  id         Int      @id @default(autoincrement())
  type      String
  size     Int?
  description Json?
}

model MAIN_SWITCH_CHANGEOVER {
  id         Int      @id @default(autoincrement())
  type      String
  size     Int?
}

model BUS_BAR {
  id         Int      @id @default(autoincrement())
  type     String
  size     Int?
}
model CIRCUIT_BREAKERS {
  id         Int      @id @default(autoincrement())
  type      String
  size    Int?
}

